{
  "name": "@rotorsoft/eventually-monorepo",
  "description": "Yarn2 pnp workspace baseline monorepo covering *eventually* and sample services",
  "version": "0.1.1",
  "author": {
    "name": "rotorsoft",
    "email": "rotorsoft@outlook.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rotorsoft/eventually-monorepo.git"
  },
  "bugs": {
    "url": "https://github.com/rotorsoft/eventually-monorepo/issues"
  },
  "homepage": "https://github.com/rotorsoft/eventually-monorepo#readme",
  "workspaces": [
    "libs/*",
    "services/*"
  ],
  "scripts": {
    "clean": "sh ./scripts/clean.sh",
    "build": "yarn tsc --build",
    "test": "yarn jest",
    "test:watch": "yarn jest --watch",
    "lint-file:eslint": "yarn eslint",
    "lint-file:prettier": "yarn prettier --check",
    "lint": "yarn lint-file:eslint '**/src/**/*.ts'",
    "pretty": "yarn lint-file:prettier '**/src/*.{ts,js,json,css,md,yaml,yml}'",
    "fix": "yarn lint --fix && yarn pretty --write --ignore-path ./.prettierignore",
    "publish": "sh ./scripts/publish.sh",
    "deploy:function": "sh ./scripts/deploy-function.sh",
    "deploy:app": "sh ./scripts/deploy-app.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": "14.x.x"
  },
  "lint-staged": {
    "*.ts": "yarn lint-file:eslint",
    "*.{ts,js,json,css,md}": "yarn lint-file:prettier"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^7.0.1",
    "jest": "^27.2.0",
    "lint-staged": "^11.0.1",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}

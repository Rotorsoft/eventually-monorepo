<div class="row mb-2">
  <div class="col-6">{{>subscription-bc crumb='Services'}}</div>
  <div class="col-6 d-flex justify-content-end">
    {{#if isAdmin}}
    <a href="/services?add=true" type="button" class="btn btn-primary align-self-center"><i
        class="bi bi-plus"
      ></i>
      Add</a>
      {{/if}}
  </div>
</div>

<table class="table align-middle">
  <thead>
    <tr>
      <th scope="col" class="text-end">#</th>
      <th scope="col">Id</th>
      <th scope="col">Channel</th>
      <th scope="col" class="text-end">Position</th>
      <th scope="col" class="text-end">Updated</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
      <tr>
        <td class="text-end">{{inc @index}}</td>
        <td scope="row">
          <a href="/services/{{this.id}}">{{this.id}}</a>
          {{#if this.sll}}
            <a href="{{this.sll}}" target="_blank" rel="noopener noreferrer"><img src="/public/assets/external-link.svg"
            alt="Logs"
            width="12"
            height="12" /></a>
          {{/if}}
        </td>
        <td>
          {{#if this.allPath}}
            <a href="/services/{{this.id}}/events">{{this.channel}}</a>
          {{else}}
            {{this.channel}}
          {{/if}}
        </td>
        <td class="text-end">{{intFormat this.position}}</td>
        <td class="text-end">{{dateFormat this.updated}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
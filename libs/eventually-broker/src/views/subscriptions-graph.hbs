{{>subscription-bc crumb='Subscriptions Graph'}}

<div id="graph" class="row"></div>

<script src="https://cdn.jsdelivr.net/npm/d3@7"></script>
<script>
    const usnf = new Intl.NumberFormat("en-US");

    const { rows } = {{{json this}}};
    const COLORS = {
        secondary: "#c0c0c0",
        success: "#198754",
        warning: "#ffc107",
        danger: "#dc3545"
    };
    const color = (row) => COLORS[row.active ? row.endpointStatus.color : "secondary"];
    
    const links = rows.map(row => Object.create({
        id: row.id,
        source: row.producer,
        target: row.consumer,
        color: color(row),
        position: row.active ? row.position : "",
        validated: row.validated
    }));

    const ids = {};
    links.forEach(link => {
        ids[link.source] = ids[link.source] || { id: link.source, producers: 0, consumers: 0 };
        ids[link.target] = ids[link.target] || { id: link.target, producers: 0, producers: 0 };
        ids[link.source].consumers++;
        ids[link.target].producers++;
        link.validated && (ids[link.target].validated = link.validated);
        link.source =  link.source;
        link.target =  link.target;
    });
    const nodes = Object.values(ids);

    const simulation = d3.forceSimulation(nodes)
        .force("charge", d3.forceManyBody().strength(-300))
        .force("link", d3.forceLink(links).id(d => d.id))
        .force("center", d3.forceCenter())
        .alphaMin(.1)
        .stop();

    const graph = document.getElementById("graph");
    let width = graph.offsetWidth, height = window.innerHeight - 200;
    const svg = d3.select("div#graph").append("svg").attr("height", height);

    const R = 30, D = 2 * R;
    const drag = d3.drag()
        .on("start", function({ active }, d) {
            delete d.fx;
            delete d.fy;
            delete d.pin;
            d3.select(this)
                .classed("dragging", true)
                .classed("pinned", false);
        })
        .on("drag", function({x, y}, d) {
            simulation.alpha(0.3).restart();
            d.fx = Math.max(D, Math.min(width - D, x));
            d.fy = Math.max(D, Math.min(height - D, y));
        })
        .on("end", function({ active }, d) {
            simulation.alpha(0).restart();
            delete d.fx;
            delete d.fy;
            d.pin = { x: d.x, y: d.y };
            d3.select(this)
                .classed("dragging", false)
                .classed("pinned", true);
        });

    svg.append("defs").selectAll("marker")
        .data(["arrow"]).enter()
        .append("marker")
        .attr("id", "arrow")
        .attr("viewBox", "0 -5 10 10")
        .attr("refX", 42)
        .attr("refY", -4)
        .attr("markerWidth", 6)
        .attr("markerHeight", 6)
        .attr("orient", "auto")
        .style("fill", "#6c757d")
        .append("path")
        .attr("d", "M0,-5L10,0L0,5");

    const link = svg.append("g").selectAll("g")
        .data(links).enter()
        .append("g")
        .attr("id", d => `link-${d.id}`)
        .style("stroke", d => d.color)
        .attr("class", "link");

    const path = link.append("path")
        .attr("id", d => `path-${d.id}`)
        .attr("marker-end", "url(#arrow)")
    link.append("text")
        .attr("dy", -3)
        .append("textPath")
        .attr("id", d => `last-event-${d.id}`)
        .attr("xlink:href", d => `#path-${d.id}`)
    link.append("text")
        .attr("dy", 8)
        .append("textPath")
        .attr("id", d => `position-${d.id}`)
        .attr("xlink:href", d => `#path-${d.id}`)
        .attr("startOffset", 33)
        .text(d => usnf.format(d.position));  

    const node = svg.append("g").selectAll("g")
        .data(nodes).enter()
        .append("g")
        .attr("id", d => `g-${d.id}`)
        .attr("transform", `translate(${width/2},${height/2})`)
        .call(drag)
        .on("click", function(event, d) {
            delete d.fx;
            delete d.fy;
            delete d.pin;
            d3.select(this).classed("pinned", false);
            simulation.alphaTarget(0.3).restart();
        });
    node.append("circle")
        .attr("id", d => `node-${d.id}`)
        .attr("r", R)
        .style("fill", d => d.validated === 'event' ? "#ffc107" : d.validated === 'command' ? "#8ab2f2" : d.producers === 0 ? "pink" : "white");
    node.append("text")
        .attr("x", d => -Math.min(R, R * d.id.length / 11))
        .attr("y", 3)
        .text(d => d.id.length <= 10 ? d.id : d.id.substring(0, 10) + "\u22ef");

    simulation.on("tick", () => {
        node.attr("transform", d => {
            if(d.pin) return `translate(${d.pin.x},${d.pin.y})`;
            const x = Math.max(D, Math.min(width - D, d.x));
            const y = Math.max(D, Math.min(height - D, d.y));
            return `translate(${x},${y})`
        });
        path.attr("d", d => {
            const sx = d.source.pin ? d.source.pin.x : Math.max(D, Math.min(width - D, d.source.x));
            const sy = d.source.pin ? d.source.pin.y : Math.max(D, Math.min(height - D, d.source.y));
            const tx = d.target.pin ? d.target.pin.x : Math.max(D, Math.min(width - D, d.target.x));
            const ty = d.target.pin ? d.target.pin.y : Math.max(D, Math.min(height - D, d.target.y));
            const r = Math.hypot(tx - sx, ty - sy);
            return `M${sx},${sy}A${r},${r} 0 0,1 ${tx},${ty}`;
        });
     });

    const restart = (target = 0.3) => {
        simulation.stop();
        width = graph.offsetWidth;
        height = window.innerHeight - 200;
        svg.attr("height", height);
        simulation.force("center").x(width/2).y(height/2);
        simulation.force("link").distance(Math.min(width, height) / 3);
        simulation.alpha(target).restart();
    } 

    const refresh = () => {
        clearTimeout(window.resizing);
        window.resizing = setTimeout(restart, 250);
    }
    window.onresize = refresh;

    const animate = async (state) => {
        const { id, position, endpointStatus, consumer, validated } = state;

        validated && d3.select(`#node-${consumer}`).style("fill", validated === "event" ? "#ffc107" : "#8ab2f2");

        d3.select(`#link-${id}`).style("stroke", color(state));

        d3.select(`#position-${id}`).text(usnf.format(position))
            .interrupt()
            .style("font-size", "150%")
            .transition()
            .duration(2000)
            .style("font-size", "100%");

        d3.select(`#last-event-${id}`).text(endpointStatus.name)
            .interrupt()
            .attr("startOffset", "0%")
            .transition()
            .duration(2000)
            .attr("startOffset", "150%");
    };

    const connect = () => {
        const es = new EventSource("/_monitor-all");
        es.onmessage = ({ data }) => {
            const props = JSON.parse(data);
            animate(props);
        };
        es.onerror = (error) => {
            console.error("sse error... retrying...");
        };
    }

    const cache = localStorage.getItem("cache-graph");
    if (cache) {
        const _nodes = JSON.parse(cache).nodes;
        let count = 0;
        _nodes.forEach(({ id, x, y, pin }) => {
            const found = nodes.find(n => n.id === id)
            if (found) {
                found.x = x;
                found.y = y;
                pin && (found.pin = pin);
                pin && d3.select(`#g-${id}`).classed("pinned", true);
                count++;
            }
        });
        restart(count >= _nodes.length / 2 ? 0 : .3);
    }
    else restart();

    const save = () => {
        clearTimeout(window.saving);
        window.saving = setTimeout(() => {
            localStorage.setItem("cache-graph", JSON.stringify({ nodes }));
        }, 3000);
    }
    simulation.on("end", save);

    connect();
</script>
<div class="row">
  <div class="col-6">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item active">Subscriptions</li>
      </ol>
    </nav>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/add" type="button" class="btn btn-primary align-self-center"><i
        class="bi bi-plus"
      ></i>
      Add</a>
  </div>
</div>

<table class="table align-middle">
  <thead>
    <tr>
      <th>Status</th>
      <th scope="col">Id</th>
      <th scope="col">Producer</th>
      <th scope="col">Consumer</th>
      <th scope="col">Path</th>
      <th scope="col">Streams</th>
      <th scope="col">Names</th>
    </tr>
  </thead>
  <tbody>
    {{#each rows}}
      <tr class="{{#unless this.active}}table-secondary{{/unless}}">
        <td id="status-{{this.id}}"></td>
        <td scope="row">
          <a href="/{{this.id}}">{{this.id}}</a>
        </td>
        <td>{{this.producer}}</td>
        <td>{{this.consumer}}</td>
        <td>{{this.path}}</td>
        <td>{{this.streams}}</td>
        <td>{{this.names}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<script>
  const es = new EventSource("/monitor-all");

  const badge = (count, cls) => 
    count > 0 ? `<span class="${cls}">${count}</span>` : "";

  const refresh = (state) => {
    const { id, color, icon, position, channelPosition, total, events } = state;
    const statusTd = document.getElementById(`status-${id}`);
    
    const a = events.reduce((a,e) => {
      a.ok += e.ok ? e.ok.count : 0;
      a.errors += e.errors ? e.errors.count : 0;
      a.ignored += e.ignored ? e.ignored.count : 0;
      return a;
    }, {ok:0, errors:0,ignored:0});
     
    statusTd && (statusTd.innerHTML=`
      <div class="counters text-${color}">
        <i class="bi ${icon}"></i>
        ${position < channelPosition ? `<b style='color:silver'>${position}</b><b>/${channelPosition}</b>` : `<b>${position}</b>`}
      </div>
      <div class="counters">
        ${badge(a.ok, "ok")}
        ${badge(a.errors, "errors")}
        ${badge(a.ignored, "ignored")}
      </div>
    `);
  };

  es.onmessage = ({ data }) => {
    const props = JSON.parse(data);
    refresh(props);
  };

  es.onerror = (error) => {
    console.error(error);
  };

  const { rows } = {{{json this}}};
  rows.map(row => refresh(row));
</script>
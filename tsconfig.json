{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@rotorsoft/*": ["libs/*/src"]
    }
  },
  "exclude": ["**/dist", "**/__mocks__", "**/__tests__"]
}
